<?xml version="1.0" encoding="UTF-8"?>
<form i18nBaseUri="preside-objects.email_template:">
	<tab id="default">
		<fieldset id="general" sortorder="10">
			<field binding="email_template.layout"       sortorder="10" control="emailLayoutPicker" />
			<field binding="email_template.from_address" sortorder="20" control="textinput" />
			<field binding="email_template.track_clicks" sortorder="30" />
		</fieldset>
		<fieldset id="body" sortorder="20">
			<field binding="email_template.subject"     control="textinput"   sortorder="10" />
			<field binding="email_template.attachments"                       sortorder="20" sortable="true" />
			<field binding="email_template.html_body"   control="richeditor"  sortorder="30" widgetCategories="email" linkPickerCategory="email" toolbar="email" />
			<field binding="email_template.text_body"   control="textarea"    sortorder="40" />
		</fieldset>
	</tab>
</form>